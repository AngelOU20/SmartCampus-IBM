@{
    ViewData["Title"] = "IOT";
}

    <header class="head1">
        <nav class="nav container">
            <div class="nav__logo">
                <h2 class="nav__title"> Smart Campus IBM</h2>
            </div>

            <ul class="nav__link nav__link--menu">
                <li class="nav__items">
                    <a asp-controller="Home" asp-action="Index" class="nav__links">Inicio</a>
                </li>
                <li class="nav__items">
                    <a asp-controller="Home" asp-action="Watson" class="nav__links">Acerca del Asistente</a>
                </li>
                <li class="nav__items">
                    <a asp-controller="Home" asp-action="iot" class="nav__links">Acerca del IOT</a>
                </li>

